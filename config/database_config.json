{
  "db_type": "sqlite",
  "connection_string": "sqlite:///qpki.db",
  "auto_migrate": true,
  "echo_sql": false,
  "pool_size": 10,
  "max_overflow": 20,
  "pool_timeout": 30,
  "pool_recycle": 3600,
  "sqlite_options": {
    "check_same_thread": false,
    "journal_mode": "WAL",
    "synchronous": "NORMAL"
  },
  "postgresql_options": {
    "sslmode": "prefer",
    "connect_timeout": 10,
    "application_name": "qPKI"
  },
  "mysql_options": {
    "charset": "utf8mb4",
    "connect_timeout": 10,
    "autocommit": true
  },
  "backup": {
    "enabled": false,
    "interval_hours": 24,
    "retention_days": 30,
    "backup_dir": "backups/"
  }
}
