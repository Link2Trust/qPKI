{
  "database": {
    "db_type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "database": "qpki",
    "username": "qpki",
    "password": "secure_password_here",
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30,
    "pool_recycle": 3600,
    "ssl_mode": "prefer",
    "echo_queries": false,
    "auto_migrate": true,
    "backup_enabled": true,
    "backup_interval_hours": 24
  },
  "api": {
    "host": "0.0.0.0",
    "port": 5000,
    "secret_key": "change-this-in-production",
    "jwt_secret": "change-this-jwt-secret-in-production",
    "jwt_access_token_expires": 3600,
    "jwt_refresh_token_expires": 604800,
    "rate_limit": {
      "default": "1000 per hour, 100 per minute",
      "auth": "10 per minute",
      "ca_operations": "50 per hour",
      "cert_operations": "200 per hour"
    },
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000", "http://localhost:9090"],
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"],
      "headers": ["Content-Type", "Authorization", "X-API-Key"]
    }
  },
  "ocsp": {
    "enabled": true,
    "responder_name": "qPKI OCSP Responder",
    "responder_key_file": "/path/to/ocsp/responder.key",
    "responder_cert_file": "/path/to/ocsp/responder.crt",
    "response_validity_hours": 24,
    "signature_algorithm": "sha256",
    "include_certs": true,
    "enable_response_caching": true,
    "cache_duration_minutes": 60,
    "require_request_signature": false,
    "allowed_hash_algorithms": ["sha1", "sha256", "sha384", "sha512"],
    "max_request_size": 1048576
  },
  "audit": {
    "enabled": true,
    "storage_type": "database",
    "retention_days": 2555,
    "archive_after_days": 365,
    "compression": true,
    "encryption": true,
    "tamper_detection": true,
    "compliance_mode": "rfc3647",
    "log_levels": ["low", "medium", "high", "critical"],
    "categories": [
      "certificate_authority",
      "certificate",
      "authentication", 
      "authorization",
      "system",
      "security",
      "compliance",
      "api"
    ]
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "handlers": {
      "file": {
        "enabled": true,
        "filename": "/var/log/qpki/application.log",
        "max_bytes": 10485760,
        "backup_count": 5
      },
      "syslog": {
        "enabled": false,
        "address": "/dev/log",
        "facility": "daemon"
      },
      "console": {
        "enabled": true
      }
    }
  }
}
